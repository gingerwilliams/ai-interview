generator client {
    provider = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
    output   = "app/generated/prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  	id String @id @default(uuid())
  	email String  @unique
}

model Chat {
	id String @id @default(uuid())
	chat String
}

model Subject {
    id String @id @default(uuid())
    name String
    details String
}

model Article {
    id String @id @default(uuid())
    // ket subject
}